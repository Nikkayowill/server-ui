    background: rgba(250, 204, 21, 0.2);
    color: var(--warning-solid);
}

.status-failed {
    background: rgba(248, 113, 113, 0.2);
    color: var(--error-solid);
}

/* Dashboard Forms */
.dash-form-group {
    margin-bottom: 1.5rem;
}

.dash-form-label {
    display: block;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--glow);

/* ========== DASHBOARD TECH-VIEW REDESIGN ========== */

/* Dashboard Layout Wrapper */
.dash-wrapper {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
}

.dash-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-end;

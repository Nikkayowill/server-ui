/* Global Variables */
:root {
    --glow: #2DA7DF;
    --bg-dark: #0a0812;
    --bg-card: rgba(2, 8, 20, 0.6);
    --card-bg: rgba(16, 12, 28, 0.7);
    --border-glow: rgba(45, 167, 223, 0.2);
    --border-cyan: rgba(45, 167, 223, 0.2);
    --text-primary: #e0e6f0;
    --text-secondary: #8892a0;
    --success: rgba(45, 167, 223, 0.2);
    --error: rgba(255, 68, 68, 0.2);
    --warning: rgba(255, 184, 0, 0.2);
    --success-solid: #22c55e;
    --warning-solid: #facc15;
    --error-solid: #f87171;
    
    /* Spacing scale */
    --space-1: 4px;
    --space-2: 8px;
    --space-3: 12px;
    --space-4: 16px;
    --space-5: 20px;
    --space-6: 24px;
    --space-8: 32px;
    --space-10: 40px;
    --space-12: 48px;
    --space-16: 64px;
    --space-20: 80px;
    
    /* Border radius */
    --radius-sm: 4px;
    --radius-md: 8px;
    --radius-lg: 12px;
    --radius-xl: 16px;
    --radius-full: 9999px;
}

/* Universal Font - JetBrains Mono Everywhere */
* {
    font-family: 'JetBrains Mono', monospace !important;
}

/* Global Body Styling */
body {
    background: var(--bg-dark);
    font-family: 'JetBrains Mono', monospace;
    color: var(--text-primary);
    margin: 0;
    padding: 0;
    min-height: 100vh;
}

/* Layout Utilities */
.flex { display: flex; }
.inline-flex { display: inline-flex; }
.grid { display: grid; }
.hidden { display: none; }

.flex-col { flex-direction: column; }
.flex-row { flex-direction: row; }

.items-start { align-items: flex-start; }
.items-center { align-items: center; }
.items-end { align-items: flex-end; }
.items-stretch { align-items: stretch; }

.justify-start { justify-content: flex-start; }
.justify-center { justify-content: center; }
.justify-end { justify-content: flex-end; }
.justify-between { justify-content: space-between; }

.gap-1 { gap: var(--space-1); }
.gap-2 { gap: var(--space-2); }
.gap-3 { gap: var(--space-3); }
.gap-4 { gap: var(--space-4); }
.gap-6 { gap: var(--space-6); }
.gap-8 { gap: var(--space-8); }

/* Spacing Utilities */
.p-2 { padding: var(--space-2); }
.p-4 { padding: var(--space-4); }
.p-6 { padding: var(--space-6); }
.p-8 { padding: var(--space-8); }

.px-1 { padding-left: var(--space-1); padding-right: var(--space-1); }
.px-2 { padding-left: var(--space-2); padding-right: var(--space-2); }
.px-4 { padding-left: var(--space-4); padding-right: var(--space-4); }
.px-5 { padding-left: var(--space-5); padding-right: var(--space-5); }
.px-6 { padding-left: var(--space-6); padding-right: var(--space-6); }
.px-8 { padding-left: var(--space-8); padding-right: var(--space-8); }
.px-12 { padding-left: var(--space-12); padding-right: var(--space-12); }

.py-1 { padding-top: var(--space-1); padding-bottom: var(--space-1); }
.py-3 { padding-top: var(--space-3); padding-bottom: var(--space-3); }
.py-4 { padding-top: var(--space-4); padding-bottom: var(--space-4); }
.py-6 { padding-top: var(--space-6); padding-bottom: var(--space-6); }
.py-8 { padding-top: var(--space-8); padding-bottom: var(--space-8); }
.py-12 { padding-top: var(--space-12); padding-bottom: var(--space-12); }
.py-16 { padding-top: var(--space-16); padding-bottom: var(--space-16); }
.py-20 { padding-top: var(--space-20); padding-bottom: var(--space-20); }

.pt-24 { padding-top: 96px; }
.pt-32 { padding-top: 128px; }
.pt-36 { padding-top: 144px; }

.mb-2 { margin-bottom: var(--space-2); }
.mb-4 { margin-bottom: var(--space-4); }
.mb-6 { margin-bottom: var(--space-6); }
.mb-7 { margin-bottom: 28px; }
.mb-8 { margin-bottom: var(--space-8); }
.mb-12 { margin-bottom: var(--space-12); }
.mb-16 { margin-bottom: var(--space-16); }
.mb-20 { margin-bottom: var(--space-20); }

.mt-8 { margin-top: var(--space-8); }

.ml-2 { margin-left: var(--space-2); }
.mr-1 { margin-right: var(--space-1); }
.mr-3 { margin-right: var(--space-3); }
.-mr-1 { margin-right: -4px; }

/* Width/Height */
.w-5 { width: 20px; }
.w-full { width: 100%; }
.h-5 { height: 20px; }

.max-w-3xl { max-width: 768px; }
.max-w-7xl { max-width: 1280px; }

.mx-auto { margin-left: auto; margin-right: auto; }

/* Text Utilities */
.text-xs { font-size: 0.75rem; }
.text-sm { font-size: 0.875rem; }
.text-base { font-size: 1rem; }
.text-lg { font-size: 1.125rem; }
.text-xl { font-size: 1.25rem; }
.text-3xl { font-size: 1.875rem; }
.text-4xl { font-size: 2.25rem; }
.text-5xl { font-size: 3rem; }
.text-6xl { font-size: 3.75rem; }

.font-medium { font-weight: 500; }
.font-bold { font-weight: 700; }
.font-extrabold { font-weight: 800; }

.text-center { text-align: center; }

.leading-none { line-height: 1; }
.tracking-tight { letter-spacing: -0.025em; }

.text-white { color: #ffffff; }
.text-gray-300 { color: #d1d5db; }
.text-gray-400 { color: #9ca3af; }
.text-gray-900 { color: #111827; }
.text-cyan-400 { color: var(--glow); }

/* Border/Radius */
.rounded-lg { border-radius: var(--radius-md); }
.rounded-xl { border-radius: var(--radius-xl); }
.rounded-full { border-radius: var(--radius-full); }

.border { border: 1px solid; }
.border-2 { border: 2px solid; }
.border-gray-700 { border-color: #374151; }
.border-cyan-500\/10 { border-color: rgba(45, 167, 223, 0.1); }
.border-cyan-500\/30 { border-color: rgba(45, 167, 223, 0.3); }
.border-cyan-500\/40 { border-color: rgba(45, 167, 223, 0.4); }

/* Background */
.bg-gray-800 { background: #1f2937; }
.bg-gray-800\/30 { background: rgba(31, 41, 55, 0.3); }
.bg-gray-800\/50 { background: rgba(31, 41, 55, 0.5); }
.bg-gray-900 { background: #111827; }
.bg-gray-900\/50 { background: rgba(17, 24, 39, 0.5); }
.bg-cyan-400 { background: var(--glow); }

/* Hover states */
.hover\:bg-cyan-500:hover { background: #20B1DC; }
.hover\:bg-gray-800:hover { background: #1f2937; }
.hover\:border-gray-600:hover { border-color: #4b5563; }
.hover\:border-cyan-500\/30:hover { border-color: rgba(45, 167, 223, 0.3); }
.hover\:-translate-y-1:hover { transform: translateY(-4px); }

/* Focus states */
.focus\:ring-4:focus { box-shadow: 0 0 0 4px; }
.focus\:ring-cyan-300:focus { box-shadow: 0 0 0 4px rgba(45, 167, 223, 0.3); }
.focus\:ring-gray-800:focus { box-shadow: 0 0 0 4px rgba(31, 41, 55, 0.5); }

/* Transitions */
.transition-all { transition: all 0.2s ease; }

/* Grid */
.grid-cols-1 { grid-template-columns: repeat(1, minmax(0, 1fr)); }
.grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }

/* Position */
.relative { position: relative; }
.overflow-hidden { overflow: hidden; }

/* White Text Enhancement - Subtle Outline for Pop Effect */
h1, h2, h3, h4, h5, h6 {
    text-shadow: 0 0 2px rgba(0, 0, 0, 0.9), 0 2px 4px rgba(0, 0, 0, 0.6);
}

p, span, a, li, label, button, input, textarea {
    text-shadow: 0 0 1px rgba(0, 0, 0, 0.7), 0 1px 2px rgba(0, 0, 0, 0.4);
}

/* Consistent Heading Sizes and Colors Site-Wide */
h1 {
    font-size: 3rem !important;
    line-height: 1.2 !important;
    font-weight: 700 !important;
    letter-spacing: -0.5px !important;
    color: #ffffff !important;
}

h2 {
    font-size: 1.75rem !important;
    line-height: 1.3 !important;
    font-weight: 600 !important;
    letter-spacing: -0.25px !important;
    color: #ffffff !important;
}

h3 {
    font-size: 1.25rem !important;
    line-height: 1.4 !important;
    font-weight: 600 !important;
    color: #e0e6f0 !important;
}

/* Body Text - Light Gray for Readability */
p:not([class*="text-"]) {
    color: #8892a0;
}

/* Table Cells - White Text by Default */
td {
    color: #e0e6f0;
}

th {
    color: #8892a0;
}

/* Emphasis Text - Cyan Glow */
.glow-text, .text-cyan-400, [class*="text-cyan"] {
    color: var(--glow) !important;
    text-shadow: 0 0 3px rgba(45, 167, 223, 0.4), 0 0 1px rgba(0, 0, 0, 0.8) !important;
}

/* Button Components */
.btn-primary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 20px;
    font-size: 1rem;
    font-weight: 500;
    text-align: center;
    color: #111827;
    background: var(--glow);
    border: none;
    border-radius: var(--radius-md);
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
}

.btn-primary:hover {
    background: #20B1DC;
    box-shadow: 0 0 0 4px rgba(45, 167, 223, 0.3);
}

.btn-secondary {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 20px;
    font-size: 1rem;
    font-weight: 500;
    text-align: center;
    color: #d1d5db;
    background: transparent;
    border: 1px solid #374151;
    border-radius: var(--radius-md);
    text-decoration: none;
    cursor: pointer;
    transition: all 0.2s ease;
}

.btn-secondary:hover {
    background: #1f2937;
    border-color: #4b5563;
    box-shadow: 0 0 0 4px rgba(31, 41, 55, 0.5);
}

.btn-icon {
    margin-left: 8px;
    margin-right: -4px;
    width: 20px;
    height: 20px;
}

/* Card Components */
.card {
    background: rgba(31, 41, 55, 0.5);
    border: 1px solid rgba(45, 167, 223, 0.1);
    border-radius: var(--radius-lg);
    padding: 24px;
    transition: all 0.2s ease;
}

.card:hover {
    border-color: rgba(45, 167, 223, 0.3);
    transform: translateY(-4px);
}

.card-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--glow);
    margin-bottom: 8px;
}

.card-text {
    color: #9ca3af;
}

/* Feature Badge */
.badge-pill {
    display: inline-flex;
    align-items: center;
    justify-content: space-between;
    padding: 4px 4px 4px 16px;
    font-size: 0.875rem;
    color: #111827;
    background: var(--glow);
    border-radius: 9999px;
    text-decoration: none;
    transition: all 0.2s ease;
}

.badge-pill:hover {
    background: #20B1DC;
}

.badge-inner {
    font-size: 0.75rem;
    background: #111827;
    color: var(--glow);
    padding: 6px 16px;
    border-radius: 9999px;
    margin-right: 12px;
}

/* Matrix Background Effect */
.matrix-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -2;
    opacity: 0.04;
    pointer-events: none;
    background: 
        repeating-linear-gradient(0deg, transparent, transparent 1px, rgba(45, 167, 223, 0.03) 1px, rgba(45, 167, 223, 0.03) 2px),
        repeating-linear-gradient(90deg, transparent, transparent 1px, rgba(45, 167, 223, 0.03) 1px, rgba(45, 167, 223, 0.03) 2px);
}

/* Global Container - Consistent site-wide spacing */
.page-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 140px 48px 80px;
}

/* Content Container (for non-Tailwind pages) */
.content {
    max-width: 900px;
    margin: 0 auto;
    padding: 140px 48px 80px;
}

.subtitle {
    color: #8892a0;
    font-size: 18px;
    margin-bottom: 60px;
    line-height: 1.6;
}

.content p {
    font-size: 15px;
    line-height: 1.8;
    margin-bottom: 20px;
}

.content ul,
.content ol {
    font-size: 15px;
    line-height: 1.8;
    margin-bottom: 20px;
    margin-left: 24px;
}

.content li {
    margin-bottom: 12px;
}

code {
    background: rgba(45, 167, 223, 0.1);
    color: var(--glow);
    padding: 2px 8px;
    border-radius: 3px;
    font-size: 14px;
}

/* Responsive Utilities - Mobile First */
@media (min-width: 640px) {
    .sm\:flex-row { flex-direction: row; }
    .sm\:justify-center { justify-content: center; }
    .sm\:space-y-0 > * + * { margin-top: 0; }
    .sm\:space-x-4 > * + * { margin-left: 16px; }
    .sm\:px-6 { padding-left: 24px; padding-right: 24px; }
    .sm\:grid-cols-2 { grid-template-columns: repeat(2, minmax(0, 1fr)); }
    .sm\:w-auto { width: auto; }
}

@media (min-width: 768px) {
    .md\:text-4xl { font-size: 2.25rem; }
    .md\:text-5xl { font-size: 3rem; }
    .md\:text-6xl { font-size: 3.75rem; }
    .md\:text-lg { font-size: 1.125rem; }
    .md\:pt-32 { padding-top: 128px; }
    .md\:p-12 { padding: 48px; }
    .md\:py-20 { padding-top: 80px; padding-bottom: 80px; }
}

@media (min-width: 1024px) {
    .lg\:text-6xl { font-size: 3.75rem; }
    .lg\:text-xl { font-size: 1.25rem; }
    .lg\:py-16 { padding-top: 64px; padding-bottom: 64px; }
    .lg\:px-8 { padding-left: 32px; padding-right: 32px; }
    .lg\:px-12 { padding-left: 48px; padding-right: 48px; }
    .lg\:pt-36 { padding-top: 144px; }
    .lg\:mb-16 { margin-bottom: 64px; }
    .lg\:grid-cols-4 { grid-template-columns: repeat(4, minmax(0, 1fr)); }
}

@media (min-width: 1280px) {
    .xl\:px-48 { padding-left: 192px; padding-right: 192px; }
}

/* Responsive spacing helpers */
.space-y-4 > * + * { margin-top: 16px; }
.space-x-4 > * + * { margin-left: 16px; }

/* Admin/Table Styles */
.table-card {
    background: rgba(2, 8, 20, 0.8);
    border: 1px solid rgba(136, 254, 0, 0.15);
    border-radius: 8px;
    padding: 24px;
    overflow-x: auto;
    margin-bottom: 32px;
}

table {
    width: 100%;
    border-collapse: collapse;
    min-width: 600px;
}

th {
    text-align: left;
    padding: 12px;
    color: #8892a0;
    font-size: 12px;
    text-transform: uppercase;
    border-bottom: 1px solid rgba(136, 254, 0, 0.15);
}

td {
    padding: 12px;
    color: #e0e6f0;
    border-bottom: 1px solid rgba(136, 254, 0, 0.05);
}

tr:last-child td {
    border-bottom: none;
}

/* Flash Message Component */
.flash-message {
    position: fixed;
    top: 100px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(136, 254, 0, 0.15);
    color: var(--glow);
    padding: 12px 36px 12px 16px;
    border-radius: 6px;
    border: 1px solid rgba(136, 254, 0, 0.3);
    box-shadow: 0 2px 10px rgba(136, 254, 0, 0.1);
    font-weight: 400;
    font-size: 14px;
    z-index: 10000;
    animation: slideDown 0.3s ease-out;
    max-width: 400px;
    text-align: center;
}

.flash-message.fade-out {
    animation: fadeOut 0.5s ease-out forwards;
}

.flash-close {
    position: absolute;
    top: 6px;
    right: 8px;
    background: none;
    border: none;
    color: var(--glow);
    font-size: 18px;
    cursor: pointer;
    padding: 2px 6px;
    line-height: 1;
    opacity: 0.5;
    transition: opacity 0.2s;
}

.flash-close:hover {
    opacity: 1;
}

@keyframes slideDown {
    from {
        transform: translate(-50%, -100px);
        opacity: 0;
    }
    to {
        transform: translateX(-50%);
        opacity: 1;
    }
}

@keyframes fadeOut {
    to {
        opacity: 0;
        transform: translate(-50%, -50px);
    }
}

/* Checkout Page Styles */
.checkout-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 120px 5vw 60px;
}

.checkout-card {
    background: var(--bg-card);
    border: 1px solid var(--border-glow);
    border-radius: 8px;
    padding: 48px;
    max-width: 500px;
    width: 100%;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(10px);
}

.checkout-card h1 {
    font-size: 32px !important;
    margin-bottom: 12px;
    color: var(--glow) !important;
    text-align: center;
    font-weight: 700;
}

.checkout-card .price {
    font-size: 48px;
    font-weight: 700;
    color: #fff;
    text-align: center;
    margin: 24px 0;
}

.checkout-card .price span {
    font-size: 20px;
    color: #fff;
}

.checkout-card .description {
    text-align: center;
    color: var(--text-secondary);
    font-size: 14px;
    margin-bottom: 32px;
    line-height: 1.6;
}

/* Wizard Styles (Getting Started) */
.wizard-container {
    max-width: 800px;
    margin: 80px auto 40px;
    padding: 0 20px;
}

.wizard-steps {
    display: flex;
    justify-content: space-between;
    margin-bottom: 48px;
    position: relative;
}

.wizard-steps::before {
    content: '';
    position: absolute;
    top: 20px;
    left: 40px;
    right: 40px;
    height: 2px;
    background: rgba(45, 167, 223, 0.2);
    z-index: 0;
}

.wizard-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    position: relative;
    z-index: 1;
}

/* Domain Management Styles */
.admin-wrapper {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

main.dashboard {
    flex: 1;
    padding: 120px 24px 60px 24px;
    max-width: 1600px;
    margin: 0 auto;
    width: 100%;
}

.admin-header {
    margin-bottom: 48px;
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
}

.admin-title {
    font-size: 36px !important;
    color: var(--glow) !important;
    margin: 0 0 12px 0;
    font-weight: 700;
    letter-spacing: -0.5px;
}

.admin-subtitle {
    color: #8892a0;
    font-size: 15px;
    margin: 0;
}

.btn-add {
    padding: 10px 20px;
    background: var(--glow);
    color: #0a0812;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-weight: 600;
    font-size: 13px;
}

.btn-add:hover {
    box-shadow: 0 0 20px rgba(136, 254, 0, 0.5);
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 20px;
    margin-bottom: 40px;
}

.stat-card {
    background: var(--bg-card);
    border: 1px solid var(--border-glow);
    border-radius: 6px;
    padding: 24px;
}

.stat-value {
    font-size: 32px;
    font-weight: 700;
    color: var(--glow);
    margin-bottom: 6px;
}

.stat-label {
    color: #8892a0;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.8px;
}

.table-header {
    background: rgba(136, 254, 0, 0.05);
    border-bottom: 1px solid var(--border-glow);
    padding: 24px;
}

.table-header-title {
    font-size: 18px !important;
    color: #e0e6f0 !important;
    margin: 0;
    font-weight: 600;
}

.table-content {
    overflow-x: auto;
}

.admin-table {
    width: 100%;
    border-collapse: collapse;
}

.admin-table th {
    background: rgba(0, 0, 0, 0.3);
    padding: 14px 18px;
    text-align: left;
    font-size: 11px;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: #8892a0;
    border-bottom: 1px solid var(--border-glow);
}

/* Responsive Content Styles */
@media (max-width: 768px) {
    .page-container,
    .content {
        padding: 120px 32px 60px !important;
    }

    .subtitle {
        font-size: 16px !important;
        margin-bottom: 48px !important;
    }
    
    main.dashboard {
        padding: 100px 16px 40px 16px;
    }
    
    .checkout-container {
        padding: 100px 20px 40px;
    }
    
    .checkout-card {
        padding: 32px 24px;
    }
    
    .checkout-card h1 {
        font-size: 26px !important;
    }
    
    .checkout-card .price {
        font-size: 40px;
    }
}

@media (max-width: 480px) {
    .page-container,
    .content {
        padding: 100px 24px 50px !important;
    }
    
    main.dashboard {
        padding: 90px 12px 30px 12px;
        max-width: 100% !important;
    }

    .content h1 {
        font-size: 28px !important;
        margin-bottom: 12px !important;
        word-wrap: break-word;
    }

    .subtitle {
        font-size: 14px !important;
        margin-bottom: 40px !important;
        line-height: 1.5 !important;
    }

    .content h2 {
        font-size: 20px !important;
        margin-top: 36px !important;
        margin-bottom: 12px !important;
    }

    .content h3 {
        font-size: 16px !important;
        margin-top: 24px !important;
        margin-bottom: 10px !important;
    }

    .content p,
    .content ul,
    .content ol {
        font-size: 14px !important;
    }
}

/* Animations */
@keyframes slideIn {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

@keyframes spin {
    to {
        transform: translateY(-50%) rotate(360deg);
    }
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes pulse-glow {
    0%, 100% { 
        box-shadow: 0 0 60px rgba(45, 167, 223, 0.3); 
    }
    50% { 
        box-shadow: 0 0 80px rgba(45, 167, 223, 0.5); 
    }
}

/* Navigation */
.main-nav {
    position: fixed;
    top: 20px;
    left: 50%;
    transform: translateX(-50%);
    width: 95%;
    max-width: 1200px;
    background: rgba(17, 24, 39, 0.85);
    backdrop-filter: blur(12px);
    border-radius: 12px;
    padding: 16px 24px;
    z-index: 1000;
    border: 1px solid rgba(45, 167, 223, 0.1);
    transition: background 0.3s, border 0.3s;
}

.main-nav.scrolled {
    background: rgba(17, 24, 39, 0.5);
    border-color: rgba(45, 167, 223, 0.05);
}

.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.nav-logo img {
    height: 40px;
    width: auto;
}

.nav-links {
    display: flex;
    list-style: none;
    gap: 40px;
    margin: 0;
    padding: 0;
}

.nav-links a {
    color: #e0e6f0;
    text-decoration: none;
    font-size: 15px;
}

.nav-links a:hover {
    color: var(--glow);
}

.hamburger {
    display: none;
    flex-direction: column;
    gap: 6px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 8px;
}

.hamburger span {
    width: 24px;
    height: 2px;
    background: var(--glow);
    transition: 0.3s;
}

@media (max-width: 768px) {
    .main-nav {
        top: 0;
        left: 0;
        transform: none;
        width: 100%;
        border-radius: 0;
        padding: 16px 20px;
    }
    
    .hamburger {
        display: flex;
    }
    
    .nav-links {
        position: fixed;
        top: 0;
        right: -100%;
        width: 280px;
        height: 100vh;
        flex-direction: column;
        background: rgba(2, 8, 20, 0.98);
        padding: 80px 30px;
        gap: 24px;
        transition: right 0.3s;
        visibility: hidden;
    }
    
    .nav-links.active {
        right: 0;
        visibility: visible;
    }
    
    .hamburger.active span:nth-child(1) {
        transform: rotate(45deg) translate(7px, 7px);
    }
    
    .hamburger.active span:nth-child(2) {
        opacity: 0;
    }
    
    .hamburger.active span:nth-child(3) {
        transform: rotate(-45deg) translate(7px, -7px);
    }
}


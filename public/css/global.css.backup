    border: 1px solid rgba(248, 113, 113, 0.3);
}

.dash-btn-danger:hover {
    background: rgba(248, 113, 113, 0.3);
}

/* Responsive Breakpoints */
@media (max-width: 768px) {
    .stat-group {
        grid-column: span 6;
    }

    .dash-grid {
        grid-template-columns: 1fr;
    }

    .dash-card {
